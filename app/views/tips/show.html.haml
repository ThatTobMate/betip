- model_class = Tip
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:odds) + ':'
  %br
  = @tip.odds
%p
  %strong= model_class.human_attribute_name(:bookies) + ':'
  %br
  = @tip.bookies
%p
  %strong= model_class.human_attribute_name(:won) + ':'
  %br
  = @tip.won
%p
  %strong= model_class.human_attribute_name(:prediction_id) + ':'
  %br
  = @tip.prediction_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tips_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_tip_path(@tip), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), tip_path(@tip), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
