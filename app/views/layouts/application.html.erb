<!DOCTYPE html>
<html ng-app="betipApp">
<head>
  <title>Betip</title>
  <base href="/betip/"
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <%= javascript_include_tag "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <%= render "layouts/navbar/navloggedin" %>
      <div ng-view class="inner-body"></div>
  <% else %>
    <%= render "layouts/navbar/navlogin" %>
    <h1 class="welcome-page-h1">Betip</h1>
    <h4 class="welcome-page-h4">How does it work?<h4>
  <%end %>



  <% if current_user.present? %>
    <%= javascript_tag do %>
        var currentUser = <%= raw current_user.to_json %>
        var currentTip = <%= raw Tip.last.to_json %>
        var tipsters = <%= raw User.where(role: "Tipster").to_json %>
    <% end %> 
  <% end %>


</body>
</html>

