- model_class = Result
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:goalsHomeTeam) + ':'
  %br
  = @result.goalsHomeTeam
%p
  %strong= model_class.human_attribute_name(:goalsAwayTeam) + ':'
  %br
  = @result.goalsAwayTeam
%p
  %strong= model_class.human_attribute_name(:betWon) + ':'
  %br
  = @result.betWon

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), results_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_result_path(@result), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), result_path(@result), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
