= form_for @prediction do |f|
  - if @prediction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@prediction.errors.count, "error")} prohibited this prediction from being saved:"
      %ul
        - @prediction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :homeTeam
    = f.text_field :homeTeam
  .field
    = f.label :awayTeam
    = f.text_field :awayTeam
  .field
    = f.label :predictionGoalsHomeTeam
    = f.number_field :predictionGoalsHomeTeam
  .field
    = f.label :predictionGoalsAwayTeam
    = f.number_field :predictionGoalsAwayTeam
  .actions
    = f.submit 'Save'
