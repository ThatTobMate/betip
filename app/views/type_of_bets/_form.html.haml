= form_for @type_of_bet do |f|
  - if @type_of_bet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@type_of_bet.errors.count, "error")} prohibited this type_of_bet from being saved:"
      %ul
        - @type_of_bet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
