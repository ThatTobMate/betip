- model_class = Result
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:goalsHomeTeam)
      %th= model_class.human_attribute_name(:goalsAwayTeam)
      %th= model_class.human_attribute_name(:betWon)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @results.each do |result|
      %tr
        %td= link_to result.id, result_path(result)
        %td= result.goalsHomeTeam
        %td= result.goalsAwayTeam
        %td= result.betWon
        %td=l result.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_result_path(result), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), result_path(result), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_result_path, :class => 'btn btn-primary'
