- model_class = Tip
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:odds)
      %th= model_class.human_attribute_name(:bookies)
      %th= model_class.human_attribute_name(:stake)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:won)
      %th= model_class.human_attribute_name(:prediction_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tips.each do |tip|
      %tr
        %td= link_to tip.id, tip_path(tip)
        %td= tip.odds
        %td= tip.bookies
        %td= tip.stake
        %td= tip.type
        %td= tip.won
        %td= tip.prediction_id
        %td=l tip.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_tip_path(tip), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), tip_path(tip), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_tip_path, :class => 'btn btn-primary'
