= form_for @result, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :goalsHomeTeam, :class => 'control-label'
    .controls
      = f.number_field :goalsHomeTeam, :class => 'number_field'
  .control-group
    = f.label :goalsAwayTeam, :class => 'control-label'
    .controls
      = f.number_field :goalsAwayTeam, :class => 'number_field'
  .control-group
    = f.label :betWon, :class => 'control-label'
    .controls
      = f.check_box :betWon, :class => 'check_box'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), results_path, :class => 'btn'
